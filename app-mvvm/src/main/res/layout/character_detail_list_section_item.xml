<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemDataRow"
            type="es.upsa.mimo.mimo18_androidarch.detail.CharacterDetailSection.ItemDataBindingModelRow"/>

    </data>

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true"
        android:onClick="@{_ -> itemDataRow.itemClick.invoke(itemDataRow.itemName)}">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_keyboard_arrow_right_black_18dp"
            android:id="@+id/imgItem"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgItem"
            android:layout_marginLeft="15dp"
            tools:text="Item test text"
            android:text="@{itemDataRow.itemName}"
            android:id="@+id/tvItem"/>

    </RelativeLayout>
</layout>